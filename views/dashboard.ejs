<!-- Dashboard -->
<section class="dashboard">
    <div class="container">
        <div class="dashboard-header">
            <h1>My Dashboard</h1>
            <p>Welcome back, <%= user?.firstName || 'User' %>!</p>
        </div>

        <!-- Stats Overview -->
        <div class="stats-overview">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-tshirt"></i>
                </div>
                <div class="stat-info">
                    <h3><%= stats?.totalProducts || 0 %></h3>
                    <p>Total Items Listed</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-eye"></i>
                </div>
                <div class="stat-info">
                    <h3><%= stats?.totalViews || 0 %></h3>
                    <p>Total Views</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stat-info">
                    <h3><%= stats?.soldProducts || 0 %></h3>
                    <p>Items Sold</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-heart"></i>
                </div>
                <div class="stat-info">
                    <h3><%= stats?.totalLikes || 0 %></h3>
                    <p>Total Likes</p>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="quick-actions">
            <a href="/sell" class="action-btn primary">
                <i class="fas fa-plus"></i>
                List New Item
            </a>
            <a href="/marketplace" class="action-btn">
                <i class="fas fa-search"></i>
                Browse Items
            </a>
            <a href="/profile" class="action-btn">
                <i class="fas fa-user"></i>
                Edit Profile
            </a>
        </div>

        <!-- Recent Items -->
        <div class="dashboard-section">
            <div class="section-header">
                <h2>My Recent Items</h2>
                <a href="/my-items" class="view-all">View All</a>
            </div>
            
            <% if (products && products.length > 0) { %>
                <div class="items-grid">
                    <% products.forEach(product => { %>
                        <div class="dashboard-item">
                            <div class="item-image">
                                <img src="<%= product.images[0]?.url || '/images/placeholder.jpg' %>" 
                                     alt="<%= product.title %>">
                                <div class="item-status <%= product.status %>">
                                    <%= product.status.charAt(0).toUpperCase() + product.status.slice(1) %>
                                </div>
                            </div>
                            <div class="item-info">
                                <h3><%= product.title %></h3>
                                <div class="item-price">$<%= product.price.toFixed(2) %></div>
                                <div class="item-stats">
                                    <span><i class="fas fa-eye"></i> <%= product.views || 0 %></span>
                                    <span><i class="fas fa-heart"></i> <%= product.likes?.length || 0 %></span>
                                </div>
                                <div class="item-actions">
                                    <a href="/product/<%= product._id %>" class="btn-small">View</a>
                                    <a href="/edit-item/<%= product._id %>" class="btn-small">Edit</a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-tshirt"></i>
                    <h3>No items yet</h3>
                    <p>Start by listing your first item!</p>
                    <a href="/sell" class="btn btn-primary">List Your First Item</a>
                </div>
            <% } %>
        </div>

        <!-- Favorites -->
        <div class="dashboard-section">
            <div class="section-header">
                <h2>My Favorites</h2>
                <a href="/favorites" class="view-all">View All</a>
            </div>
            
            <% if (favorites && favorites.length > 0) { %>
                <div class="items-grid">
                    <% favorites.forEach(item => { %>
                        <div class="favorite-item">
                            <div class="item-image">
                                <img src="<%= item.images[0]?.url || '/images/placeholder.jpg' %>" 
                                     alt="<%= item.title %>">
                            </div>
                            <div class="item-info">
                                <h3><%= item.title %></h3>
                                <div class="item-price">$<%= item.price.toFixed(2) %></div>
                                <div class="item-status <%= item.status %>">
                                    <%= item.status.charAt(0).toUpperCase() + item.status.slice(1) %>
                                </div>
                                <a href="/product/<%= item._id %>" class="btn-small">View Item</a>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-heart"></i>
                    <h3>No favorites yet</h3>
                    <p>Start saving items you love!</p>
                    <a href="/marketplace" class="btn btn-primary">Browse Items</a>
                </div>
            <% } %>
        </div>
    </div>
</section>